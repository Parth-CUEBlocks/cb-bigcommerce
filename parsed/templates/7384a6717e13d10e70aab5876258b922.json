{
  "components/common/custom-header": "<header class=\"site-header {{#if page_type '===' 'default'}}transparent_header{{/if}}\">\n  <div class=\"bc-container\">\n    <div class=\"header-wrapper\">\n      <!-- header logo  -->\n      {{#if page_type '===' 'default'}}\n        <h1 class=\"logo-wrap\">{{> components/common/custom-logo}}</h1>\n      {{else}}\n        <div class=\"logo-wrap\">{{> components/common/custom-logo}}</div>\n      {{/if}} \n      <!-- menu toggle btn -->\n      <div class=\"header-menu-toggle\">\n        <span class=\"menu_toggle_btn\">\n          <svg xmlns=\"http://www.w3.org/2000/svg\" width=\"27\" height=\"15\" viewBox=\"0 0 27 15\" fill=\"none\">\n            <rect width=\"27\" height=\"1\" fill=\"white\"/>\n            <rect x=\"12\" y=\"7\" width=\"15\" height=\"1\" fill=\"white\"/>\n            <rect x=\"7\" y=\"14\" width=\"20\" height=\"1\" fill=\"white\"/>\n          </svg>\n        </span>\n      </div>\n      <!-- Menu start -->\n      <div class=\"header-menu-container\">\n          <nav class=\"header-menu-wrapper\">\n            <ul class=\"list-menu list-menu--inline\" role=\"list\">\n              <li><a href=\"\"\n                  class=\"header__menu-item\">\n                  <span>About Us</span>\n                </a></li>\n              <li><a href=\"\"\n                  class=\"header__menu-item\">\n                  <span>Products</span>\n                </a></li>\n              <li><a href=\"\" class=\"header__menu-item\">\n                  <span>Press</span>\n                </a></li>\n              <li><a href=\"\" class=\"header__menu-item\">\n                  <span>Blog</span>\n                </a></li>\n              <li><a href=\"\" class=\"header__menu-item\">\n                  <span>Careers</span>\n                </a></li>\n              <li class=\"button_wrapper\">\n                <a href=\"\" class=\"btn primary-btn\">Jiva Petani</a>\n                <a href=\"\" class=\"btn secondary-btn\">AgriCentral</a>\n              </li>\n            </ul>\n          </nav>\n      </div>\n    </div>\n  </div>\n</header>\n<script>\n  const SiteHeader = document.querySelector(\".site-header\");\n  const scrollThreshold = 80;\n\n  window.addEventListener(\"scroll\", () => {\n      const scrollPosition = window.scrollY || window.pageYOffset;\n\n      if (scrollPosition > scrollThreshold) {\n        SiteHeader.classList.add(\"sticky-header\");\n      } else {\n        SiteHeader.classList.remove(\"sticky-header\");\n      }\n  });\n</script>\n",
  "components/common/custom-logo": "<a href=\"{{urls.home}}\" class=\"header-logo__link\">\n    <img src=\"{{getImage settings.store_logo.image 'logo_size'}}\" class=\"logo_element normal_logo\">\n    <!-- <img src=\"/assets/img/jiva-light.png\" class=\"logo_element transparent_logo\"> -->\n</a>\n"
}